<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="800dp"
    android:layout_gravity="center"
    android:layout_height="700dp"
    android:background="@drawable/mapsepia"
    tools:context=".dialogs.ClaimRouteDialogActivity">

    <LinearLayout
        android:orientation="horizontal"
        android:background="#AAfff9e8"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <Space
            android:layout_width="290dp"
            android:layout_height="36dp" />

        <TextView
            android:id="@+id/claim_route_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:layout_marginEnd="8dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:gravity="center"

            android:text="@string/routes_list"
            android:textSize="36dp"/>

        <Space
            android:layout_width="290dp"
            android:layout_height="36dp" />

    </LinearLayout>

    <LinearLayout
        android:background="#AAfff9e8"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <Space
            android:layout_width="match_parent"
            android:layout_height="50dp" />

    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:background="#AAfff9e8"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <Space
            android:layout_width="120dp"
            android:layout_height="50dp" />

        <android.support.v7.widget.RecyclerView
            android:id="@+id/routes_recycler_view"
            android:layout_width="550dp"
            android:layout_height="600dp"
            android:foregroundGravity="center"
            android:scrollbars="vertical" />

        <Space
            android:layout_width="120dp"
            android:layout_height="50dp" />

    </LinearLayout>

</LinearLayout>